{
  "manifest_version": 2,
  "name": "Google Calendar Auth",
  "version": "1.0",
  "description": "Authentication with Google Calendar API",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Google Calendar Auth"
  },
  "permissions": [
    "identity",
    "https://*.herokuapp.com/"
  ]
}
