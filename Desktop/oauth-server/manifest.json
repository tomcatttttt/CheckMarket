{
  "manifest_version": 2,
  "name": "OAuth Example Extension",
  "version": "1.0",
  "description": "Пример расширения для работы с OAuth 2.0 и Google.",
  "permissions": [
    "identity",
    "identity.email",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "applications": {
    "gecko": {
      "id": "your-extension-id@domain.com",
      "strict_min_version": "42.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
