{
  "manifest_version": 2,
  "name": "OAuth Google Sign-In Extension",
  "version": "1.0",
  "description": "Розширення для входу через Google (OAuth 2.0).",
  "permissions": [
    "identity",
    "identity.email"
  ],
  "background": {
    "scripts": ["index.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "oauth2": {
    "client_id": "1094772266793-hr8h91uahoihjljmvob0j8c7cc65tdpa.apps.googleusercontent.com",
    "scopes": ["profile", "email"]
  },
  "applications": {
    "gecko": {
      "id": "your-temporary-extension-id@domain.com",
      "strict_min_version": "42.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
